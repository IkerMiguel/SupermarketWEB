<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupermarketWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SupermarketWEB.styles.css" asp-append-version="true" />
</head>
<body>
    <!--Nav-->
    <nav class="navbar navbar-expand-lg bg-body-tertiary rounded" aria-label="Eleventh navbar example">

      <!--Title-->
      <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-page="/Index">
          <img src="Images\Icons\Supermarket.ico" width="20" height="20" alt="Carrito" style="margin-right: 5px;">
          SupermarketWeb
        </a>
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample09"
                    aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
                <img src="Images/Icons/menuH.ico" alt="Menu" style="width: 20px; height: 20px;">
            </button>
        <!--Close title-->

        <!--Items nav-->
        <div class="navbar-collapse collapse" id="navbarsExample09">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Index">
                <img src="Images\Icons\hogar.ico" width="20" height="20" alt="Carrito" style="margin-right: 5px;">
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Products/Index">Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Categories/Index">Category</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-area="" asp-page="/PayModes/Index">Pay Modes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Customers/Index">Customers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
            </li>
          </ul>
          <div class="mr-2">
              <partial name="_loginStatusPartial" />
          </div>
        </div>
        <!--Close items nav-->

      </div>
    </nav>
    <!--Close Nav-->

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SupermarketWEB - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>